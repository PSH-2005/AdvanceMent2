<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mentor Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container mt-5">
       
        <div class="card detail-card shadow-lg">
            <div class="row no-gutters">
                <div class="col-md-4 d-flex align-items-center">
                    <img src=" https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRj6O3WI91q0eD9ksvOzus-0ye6Whon2JfdMA&s" class="card-img img-fluid rounded" alt="<%= mentor.name %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title"><%= mentor.name %></h3>
                        <!-- <p class="text-muted"><%= mentor.affiliation %></p> -->
                        <p class="card-text"><%= mentor.description %></p>
                        <hr>
                        <p class="card-text">
                            <strong>Credentials:</strong> <%= mentor.credentials %>
                        </p>
                        <p class="card-text">
                            <strong>Categories:</strong> <%= mentor.categories.join(', ') %>
                        </p>
                        <p class="card-text">
                            <strong>Price:</strong> $<%= mentor.price %>/hr
                        </p>
                    </div>
                </div>
            </div>
        </div>


        <div class="container mt-4">
            <h5 class="text-center mb-3">Posts by <%= mentor.name %></h5>
            <div class="list-group">
                <% mentor.posts.forEach(function(post) { %>
                    <div class="list-group-item">
                        <h6><%= post.title %></h6>
                        <p class="mb-0"><%= post.content %></p>
                    </div>
                <% }); %>
            </div>
        </div>

     
        <div class="text-center mt-4">
            <a href="<%= mentor.linkedin %>" class="btn btn-linkedin btn-lg mx-2" target="_blank">
                <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            <button class="btn btn-follow btn-lg mx-2">
                <i class="fas fa-user-plus"></i> Follow
            </button>
            <button class="btn btn-contact btn-lg mx-2">
                <i class="fas fa-envelope"></i> Contact
            </button>
            <button class="btn btn-plans btn-lg mx-2">
                <i class="fas fa-file-invoice-dollar"></i> See Plans
            </button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
